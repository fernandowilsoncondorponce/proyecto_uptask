doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario
            h1 Iniciar Session en UpTask
            //- se escribe locals : porque en el index principal se escribio locals
                
            if locals.mensajes
                .alertas 
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]  
                            .alerta(class=`${categoria}`)
                                p= error


            form#formulario.caja.caja-login(method="POST" action="/iniciar-sesion")
                .campo 
                    label(for="email") E-mail:
                    input(type="text" name="email" placeholder="Tu Email" value= email )
                .campo 
                    label(for="password") Password:
                    input(type="text" name="password" placeholder="Tu Password" value= password)
                .campo.enviar
                    input.boton(type="submit" value="Iniciar Session")
                .campo.acciones
                    a(href="/crear-cuenta") ¿Aun no tienes cuenta? Crea uno gratis
                    a(href="/reestablecer") ¿Olvidaste tu Contraseña? 